---
const { job, description } = Astro.props;

interface Props {
  job: string;
  description: string;
}
---

<header class="mb-6 md:mb-4">
  <h1 class="text-4xl font-bold mb-2 text-gray-100">Jafeth Montero</h1>
  <h2 class="text-xl text-jasper">{job}</h2>
  <p class="mt-4 max-w-xs text-gray-200">
    {description}
  </p>
</header>
