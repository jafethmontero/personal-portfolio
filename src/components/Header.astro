---
const { job, description } = Astro.props;

interface Props {
  job: string;
  description: string;
}
---

<header class="mb-6 md:mb-4">
  <div class="flex items-center mb-2">
    <img
      class="size-10 lg:size-14 rounded-full mr-2"
      src="/images/profile-pic.webp"
      alt="Jafeth Montero"
    />
    <h1 class="text-2xl lg:text-4xl font-bold text-gray-100">Jafeth Montero</h1>
  </div>
  <h2 class="text-lg lg:text-xl text-jasper mb-2 md:mb-4">{job}</h2>
  <p class="max-w-xs text-gray-200 text-sm md:text-base">
    {description}
  </p>
</header>
