---
import AsideSection from "../components/AsideSection.astro";
import AboutSection from "../components/AboutSection.astro";
import MainWrapper from "../components/MainWrapper.astro";
import ExperienceSection from "../components/ExperienceSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import Paragraph from "../components/Paragraph.astro";
import Footer from "../components/Footer.astro";
import HighlightedText from "../components/HighlightedText.astro";
import { experiences, projects } from "../data";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Jafeth Montero - Front End Engineer">
  <AsideSection
    job="Frontend Web Developer"
    description="Creating fast, accessible, and beautifully designed web solutions."
    aboutLabel="ABOUT ME"
    experienceLabel="EXPERIENCE"
    projectsLabel="PROJECTS"
  />

  <MainWrapper>
    <AboutSection>
      <Paragraph className="mb-4">
        <HighlightedText>As a Sr. Web Developer</HighlightedText> at
        <a
          class="text-jasper hover:text-secondary"
          href="https://gexpsoftware.com"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Go to gexp software"
          title="Go to gexp software">gexp software,</a
        > I build
        <HighlightedText>innovative digital solutions,</HighlightedText> focusing
        on
        <HighlightedText>custom products</HighlightedText> that create seamless and
        engaging user experiences using <HighlightedText
          >modern technologies.</HighlightedText
        >
      </Paragraph>
      <Paragraph className="mb-4">
        I am a <HighlightedText>
          passionate programming enthusiast</HighlightedText
        > who focuses on mastering
        <HighlightedText>JavaScript</HighlightedText> and its ecosystem, including
        <HighlightedText
          >React, Redux, Node.js, Next.js, and more.</HighlightedText
        > My skills allow me to design and build <HighlightedText
          >custom solutions</HighlightedText
        > that meet client needs and exceed expectations.
      </Paragraph>
      <Paragraph className="mb-4">
        I thrive in <HighlightedText>cross- functional teams,</HighlightedText> where
        I communicate and collaborate effectively using <HighlightedText
          >Agile and Scrum</HighlightedText
        > methodologies.
      </Paragraph>
      <Paragraph>
        Beyond coding, I find peace in <HighlightedText
          >nature, photography, travel, and time with loved ones.</HighlightedText
        > I also believe technology can <HighlightedText
          >drive positive change</HighlightedText
        >—I’m open to donating my work to <HighlightedText
          >charities supporting children, conservation, elderly care, and pets.</HighlightedText
        > Let’s create something impactful together!
      </Paragraph>
    </AboutSection>

    <ExperienceSection
      title="Experience"
      lanCode="en"
      experiences={experiences}
    />

    <ProjectsSection title="Projects" lanCode="en" projects={projects} />

    <Footer>
      <p>&copy; 2025 Jafeth Montero. All rights reserved.</p>
    </Footer>
  </MainWrapper>
</Layout>
